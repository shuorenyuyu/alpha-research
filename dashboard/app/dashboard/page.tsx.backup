"use client";

import { useState, useEffect } from "react";

interface StockData {
  symbol: string;
  name: string;
  price: number;
  change: number;
  changePercent: number;
  allocation?: number;
  weight?: string;
  market_cap?: number;
  pe_ratio?: number;
  roe?: number;
}

interface PortfolioData {
  stocks: StockData[];
  total_stocks: number;
  last_rebalance: string;
  next_rebalance: string;
  days_until_rebalance: number;
  strategy: string;
  avg_pe: number;
  avg_roe: number;
  allocation_per_stock: number;
}

export default function DashboardPage() {
  const [portfolio, setPortfolio] = useState<PortfolioData | null>(null);
  const [stocks, setStocks] = useState<StockData[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    const fetchPortfolio = async () => {
      try {
        // Fetch Buffett-Munger portfolio
        const response = await fetch('/api/portfolio/buffett-munger');
        
        if (response.ok) {
          const data: PortfolioData = await response.json();
          setPortfolio(data);
          
          // Fetch current prices for top 10 stocks to display
          const topSymbols = data.stocks.slice(0, 10).map(s => s.symbol);
          const pricesResponse = await fetch(`/api/market/quotes?symbols=${topSymbols.join(',')}`);
          
          if (pricesResponse.ok) {
            const pricesData = await pricesResponse.json();
            // Merge portfolio data with current prices
            const mergedStocks = pricesData.map((price: StockData) => {
              const portfolioStock = data.stocks.find(s => s.symbol === price.symbol);
              return {
                ...price,
                allocation: portfolioStock?.allocation,
                weight: portfolioStock?.weight,
                pe_ratio: portfolioStock?.pe_ratio,
                roe: portfolioStock?.roe
              };
            });
            setStocks(mergedStocks);
          }
        } else {
          setError('Failed to fetch portfolio data');
        }
      } catch (err) {
        setError('Error loading portfolio');
        console.error('Error fetching portfolio:', err);
      } finally {
        setLoading(false);
      }
    };

    fetchPortfolio();
    
    // Refresh every 5 minutes
    const interval = setInterval(fetchPortfolio, 5 * 60 * 1000);
    return () => clearInterval(interval);
  }, []);

  if (loading) {
    return (
      <div className="min-h-screen bg-gradient-to-b from-black to-gray-900 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
          <p className="mt-4 text-gray-400">Loading Buffett-Munger portfolio strategy...</p>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="min-h-screen bg-gradient-to-b from-black to-gray-900 flex items-center justify-center">
        <div className="text-center">
          <p className="text-2xl text-red-400">{error}</p>
          <button
            onClick={() => window.location.reload()}
            className="mt-4 px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          >
            Retry
          </button>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-b from-black to-gray-900 py-12">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex justify-between items-center mb-8">
          <div>
            <h1 className="text-4xl font-bold text-white mb-2">ðŸ“Š Buffett-Munger Portfolio</h1>
            <p className="text-gray-400">{portfolio?.strategy}</p>
          </div>
          
          {portfolio && (
            <div className="text-right">
              <div className="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-lg">
                <p className="text-sm">Next Rebalance</p>
                <p className="text-2xl font-bold">{portfolio.days_until_rebalance} days</p>
                <p className="text-xs opacity-75">{portfolio.next_rebalance}</p>
              </div>
            </div>
          )}
        </div>
      
      {/* Strategy Overview */}
      {portfolio && (
        <div className="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div className="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-lg shadow-md p-6">
            <h3 className="text-sm text-gray-400 mb-2">Total Stocks</h3>
            <p className="text-3xl font-bold text-white">{portfolio.total_stocks}</p>
            <p className="text-sm text-gray-400 mt-1">Equal weighted</p>
          </div>
          
          <div className="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-lg shadow-md p-6">
            <h3 className="text-sm text-gray-400 mb-2">Allocation/Stock</h3>
            <p className="text-3xl font-bold text-white">{portfolio.allocation_per_stock.toFixed(1)}%</p>
            <p className="text-sm text-gray-400 mt-1">Per position</p>
          </div>
          
          <div className="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-lg shadow-md p-6">
            <h3 className="text-sm text-gray-400 mb-2">Avg P/E Ratio</h3>
            <p className="text-3xl font-bold text-white">{portfolio.avg_pe.toFixed(1)}</p>
            <p className="text-sm text-gray-400 mt-1">Portfolio average</p>
          </div>
          
          <div className="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-lg shadow-md p-6">
            <h3 className="text-sm text-gray-400 mb-2">Avg ROE</h3>
            <p className="text-3xl font-bold text-green-400">{portfolio.avg_roe.toFixed(1)}%</p>
            <p className="text-sm text-gray-400 mt-1">Return on equity</p>
          </div>
        </div>
      )}

      {/* Last Rebalance Info */}
      {portfolio && (
        <div className="bg-gradient-to-r from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-lg p-4 mb-6">
          <p className="text-gray-300">
            <span className="font-semibold">Last Rebalanced:</span> {portfolio.last_rebalance} â€¢ 
            <span className="ml-2 font-semibold">Annual rebalancing on January 1st</span>
          </p>
        </div>
      )}

      {/* Stock List */}
      <div className="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-lg shadow-md overflow-hidden">
        <div className="px-6 py-4 bg-gray-900/50 border-b border-gray-700">
          <h2 className="text-xl font-bold text-white">Top 10 Holdings (Real-time Prices)</h2>
          <p className="text-sm text-gray-400 mt-1">Showing 10 of {portfolio?.total_stocks || 0} stocks â€¢ Auto-refresh every 5 minutes</p>
        </div>
        <table className="min-w-full divide-y divide-gray-700">
          <thead className="bg-gray-900/50">
            <tr>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Symbol
              </th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Company
              </th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Price
              </th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Change
              </th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Change %
              </th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                Allocation
              </th>
            </tr>
          </thead>
          <tbody className="divide-y divide-gray-700">
            {stocks.map((stock) => (
              <tr key={stock.symbol} className="hover:bg-gray-700/30 transition-colors">
                <td className="px-6 py-4 whitespace-nowrap">
                  <div className="text-sm font-bold text-white">{stock.symbol}</div>
                </td>
                <td className="px-6 py-4">
                  <div className="text-sm text-gray-300">{stock.name}</div>
                </td>
                <td className="px-6 py-4 whitespace-nowrap">
                  <div className="text-sm font-semibold text-white">${stock.price.toFixed(2)}</div>
                </td>
                <td className="px-6 py-4 whitespace-nowrap">
                  <div className={`text-sm font-semibold ${stock.change >= 0 ? 'text-green-400' : 'text-red-400'}`}>
                    {stock.change >= 0 ? '+' : ''}{stock.change.toFixed(2)}
                  </div>
                </td>
                <td className="px-6 py-4 whitespace-nowrap">
                  <div className={`text-sm font-semibold ${stock.changePercent >= 0 ? 'text-green-400' : 'text-red-400'}`}>
                    {stock.changePercent >= 0 ? '+' : ''}{stock.changePercent.toFixed(2)}%
                  </div>
                </td>
                <td className="px-6 py-4 whitespace-nowrap">
                  <div className="text-sm font-semibold text-blue-400">{stock.weight || '4.0%'}</div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      </div>
    </div>
  );
}
